<html>
  <head>
    <hta:application id="Message" applicationname="Message"
        border="thin" borderstyle="normal" innerborder="no"
        caption="no" contextmenu="no" navigable="no" scroll="no" selection="no"
        showintaskbar="no" singleinstance="yes" windowState="normal">
    <meta http-equiv="MSThemeCompatible" content="yes">
    <style type="text/css">
      *     {padding:0px; margin:0px; border:0px solid; font:10pt Sans-Serif;}
      body  {background-color:ThreeDFace; overflow:hidden; cursor:default;}
      table {height:100%; width:100%; border-collapse:collapse;}
      img   {margin-top:4px; max-height:64px; max-width:64px;}
      #Text {text-align:left; vertical-align:middle; padding:1em 1em 1em 0em;}
      #Logo {text-align:center; width:100px;}
    </style>
    <script type="text/javascript">
        window.resizeTo(1, 1);
        window.moveTo(-10000, -10000);
        window.onload = function() {
            var text = Message.commandLine || "";
            text = text.replace(/(^\s*[\"'].*?[\"']\s*)|(\s+$)/g, "");
            text = text.replace(/(\\r\\n)|(\\n\\r)|(\\[rn])/, "<br>");
            Text.innerHTML = text;
            window.resizeTo(400, 100);
            window.moveTo((screen.availWidth /2) -(document.body.offsetWidth /2), (screen.availHeight /2) -(document.body.offsetHeight /2));
            window.focus();
        }
    </script>
  </head>
  <body>
    <table>
      <tr>
        <td id="Logo">
          <img src="message.png">
        </td>
        <td id="Text"></td>
      </tr>
    </table>
  </body>
</html>